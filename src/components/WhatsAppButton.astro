---
import content from "../data/content.json";
// Remove spaces and symbols for the WhatsApp URL
const waPhone = content.company.phone.replace(/[^0-9]/g, "");
---

<a
    href={`https://wa.me/${waPhone}`}
    target="_blank"
    rel="noopener noreferrer"
    class="fixed bottom-6 right-6 z-50 group flex items-center justify-center"
    aria-label="Contactar por WhatsApp"
>
    <!-- Pulse Effect -->
    <div
        class="absolute inset-0 bg-teal-400/30 rounded-full animate-ping opacity-75 group-hover:opacity-100 transition-opacity duration-1000"
    >
    </div>

    <!-- Button Container -->
    <div
        class="relative bg-white/80 backdrop-blur-md border border-white/60 p-3 rounded-full shadow-lg hover:shadow-teal-200/50 hover:scale-110 transition-all duration-300 flex items-center gap-2 overflow-hidden pr-0 group-hover:pr-4"
    >
        <!-- Icon -->
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="w-8 h-8 text-teal-600"
        >
            <path
                d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.637 3.891 1.685 5.456l-1.112 4.062 4.006-1.017zm8.276-7.485c-.046-.076-.168-.121-.35-.212-.182-.091-1.077-.531-1.243-.591-.167-.061-.289-.091-.41.091-.122.182-.469.591-.575.712-.106.121-.212.136-.394.045-.182-.091-1.468-1.03-1.468-1.03-1.035-.87-1.425-.694-1.607.182-.091.2-.182-.438 0-.62.182-.182.395-.152.546-.061.152.091 1.761.986 1.761.986.985.45 2.122 1.956 2.122 1.956.123.364.062.695-.029.845-.091.151-.334.242-.712.242z"
            ></path>
        </svg>

        <!-- Use absolute positioning trick or max-width for slide reveal -->
        <span
            class="max-w-0 opacity-0 group-hover:max-w-xs group-hover:opacity-100 transition-all duration-300 ease-out whitespace-nowrap text-teal-800 font-medium text-sm"
        >
            Pedir Cita
        </span>
    </div>
</a>
