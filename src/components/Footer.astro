---
import logoNR from "../assets/images/logo-NRstudio-negro.webp";
import content from "../data/content.json";

const currentYear = new Date().getFullYear();
---

<footer
    class="bg-white/30 backdrop-blur-xl border-t border-white/50 py-16 px-6 mt-24"
>
    <div class="max-w-4xl mx-auto flex flex-col items-center text-center">
        <!-- NR Studio Logo (Branded) -->
        <div class="mb-8 group">
            <img
                src={logoNR.src}
                alt="NR Studio Logo"
                class="h-8 w-auto hover:scale-105 transition-transform duration-500"
            />
        </div>

        <!-- Copyright & Legal -->
        <div class="mb-12">
            <p class="text-sm text-gray-600 mb-2 font-light tracking-wide">
                © {currentYear}
                {content.company.name} - {content.company.title}.
            </p>
            <div
                class="flex justify-center gap-4 text-xs text-gray-500 font-light"
            >
                <a
                    href="/aviso-legal"
                    class="hover:text-teal-600 transition-colors">Aviso Legal</a
                >
                <span class="opacity-30">|</span>
                <a
                    href="/privacidad"
                    class="hover:text-lilac-600 transition-colors"
                    >Política de Privacidad</a
                >
            </div>
        </div>

        <!-- Navigation Links -->
        <nav class="flex flex-wrap justify-center items-center gap-x-6 gap-y-4">
            {
                content.navigation.map((link, index) => (
                    <div class="flex items-center gap-6">
                        <a
                            href={link.href}
                            class="text-xs uppercase tracking-[0.2em] font-medium text-gray-500 hover:text-teal-600 transition-colors"
                        >
                            {link.name}
                        </a>
                        {index < content.navigation.length - 1 && (
                            <span class="w-1 h-1 bg-lilac-200 rounded-full" />
                        )}
                    </div>
                ))
            }
            <span class="w-1 h-1 bg-lilac-200 rounded-full"></span>
            <a
                href="/faq"
                class="text-xs uppercase tracking-[0.2em] font-medium text-gray-500 hover:text-teal-600 transition-colors"
            >
                FAQ
            </a>
        </nav>
    </div>
</footer>
